<!DOCTYPE html>
<html class="dark" lang="en">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title>{{ title or "Quravel - Free Streaming" }}</title>
    <meta name="description" content="{{ description or "Free streaming platform for movies and TV shows" }}">
    
    <!-- SEO Meta Tags -->
    <meta property="og:title" content="{{ title or "Quravel - Free Streaming" }}">
    <meta property="og:description" content="{{ description or "Free streaming platform for movies and TV shows" }}">
    <meta property="og:image" content="{{ image or "/images/og-image.jpg" }}">
    <meta property="og:url" content="{{ site.url }}{{ page.url }}">
    <meta name="twitter:card" content="summary_large_image">
    
    <!-- Canonical URL -->
    <link rel="canonical" href="{{ site.url }}{{ page.url }}">
    
    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    
    <!-- Algolia Verification -->
    <meta name="algolia-site-verification" content="F6BCD1C35FCD1EB6" />
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        primary: "#498BBB", 
                        "background-light": "#F3F4F6",
                        "background-dark": "#0B0E19",
                        "surface-dark": "#151926",
                        "footer-dark": "#0C0E14",
                        "text-light": "#E5E7EB",
                        "text-muted": "#9CA3AF"
                    },
                    fontFamily: {
                        display: ["Inter", "sans-serif"],
                        body: ["Inter", "sans-serif"],
                    },
                    borderRadius: {
                        DEFAULT: "0.5rem",
                    },
                },
            },
        };
    </script>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&amp;display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet"/>
    
    <!-- Custom Styles -->
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        .hide-scrollbar::-webkit-scrollbar {
            display: none;
        }
        .hide-scrollbar {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
        #mobile-menu {
            transition: transform 0.3s ease-in-out;
        }
        .menu-open {
            transform: translateX(0) !important;
        }
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
        .line-clamp-1 {
            overflow: hidden;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 1;
        }
        .line-clamp-2 {
            overflow: hidden;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 2;
        }
        /* Search dropdown styles */
        .search-dropdown {
            max-height: 400px;
            overflow-y: auto;
        }
        .search-dropdown::-webkit-scrollbar {
            width: 6px;
        }
        .search-dropdown::-webkit-scrollbar-track {
            background: #151926;
        }
        .search-dropdown::-webkit-scrollbar-thumb {
            background: #498BBB;
            border-radius: 3px;
        }
        /* Dropdown animations */
        .dropdown-enter {
            opacity: 0;
            transform: translateY(-10px);
        }
        .dropdown-enter-active {
            opacity: 1;
            transform: translateY(0);
            transition: opacity 200ms, transform 200ms;
        }
        /* Loading animation */
        .loading-spinner {
            border: 3px solid #f3f3f3;
            border-top: 3px solid #498BBB;
            border-radius: 50%;
            width: 24px;
            height: 24px;
            animation: spin 1s linear infinite;
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark text-gray-900 dark:text-text-light transition-colors duration-300 min-h-screen flex flex-col relative">

    {% include "partials/header.njk" %}

    <main class="flex-grow pt-20 pb-12">
        {{ content | safe }}
    </main>

    {% include "partials/footer.njk" %}

    <!-- Search Data Script -->
    <script>
        // Search data will be loaded from /search-data.json
        let searchDatabase = [];
        let searchDebounceTimer;
        
        // Load search data
        async function loadSearchData() {
            try {
                const response = await fetch('/search-data.json');
                if (response.ok) {
                    searchDatabase = await response.json();
                    console.log('Search data loaded:', searchDatabase.length, 'items');
                }
            } catch (error) {
                console.error('Failed to load search data:', error);
            }
        }
        
        // Search function
        function performSearch(query, searchType = 'desktop') {
            if (!query || query.length < 2) {
                hideSearchDropdown(searchType);
                return [];
            }
            
            const normalizedQuery = query.toLowerCase().trim();
            const results = searchDatabase.filter(item => {
                if (!item.title) return false;
                return item.title.toLowerCase().includes(normalizedQuery) ||
                       (item.japaneseTitle && item.japaneseTitle.toLowerCase().includes(normalizedQuery)) ||
                       (item.genres && item.genres.some(genre => 
                           genre.toLowerCase().includes(normalizedQuery)));
            }).slice(0, 8); // Limit to 8 results
            
            return results;
        }
        
        // Display search suggestions
        function displaySearchSuggestions(results, searchType = 'desktop') {
            const containerId = searchType === 'desktop' ? 'suggestions-list' : 'mobile-suggestions-list';
            const container = document.getElementById(containerId);
            const viewAllBtn = document.getElementById(searchType === 'desktop' ? 'view-all-btn' : 'mobile-view-all-btn');
            
            if (!container) return;
            
            if (results.length === 0) {
                container.innerHTML = `
                    <div class="p-4 text-center text-gray-400">
                        <span class="material-symbols-outlined text-2xl mb-2">search_off</span>
                        <p>No results found</p>
                    </div>
                `;
                viewAllBtn.style.display = 'none';
            } else {
                container.innerHTML = results.map(item => {
                    const slug = item.slug || item.title.toLowerCase().replace(/\s+/g, '-').replace(/[^\w-]+/g, '');
                    const typeClass = item.type === 'movie' ? 'bg-blue-500' : 'bg-green-500';
                    const typeText = item.type === 'movie' ? 'Movie' : 'TV';
                    
                    return `
                    <a href="/post/${slug}/" class="flex items-center p-3 hover:bg-gray-800 transition border-b border-gray-700 group">
                        <div class="w-12 h-16 rounded overflow-hidden flex-shrink-0 mr-3">
                            <img src="${item.poster || 'https://via.placeholder.com/48x64?text=Poster'}" 
                                 class="w-full h-full object-cover group-hover:scale-105 transition-transform"
                                 alt="${item.title}"
                                 onerror="this.src='https://via.placeholder.com/48x64?text=Poster'">
                        </div>
                        <div class="flex-1 min-w-0">
                            <h4 class="text-white font-bold text-sm truncate">${item.title || 'Untitled'}</h4>
                            <div class="flex items-center gap-2 mt-1">
                                <span class="${typeClass} text-white text-[10px] px-1.5 py-0.5 rounded">${typeText}</span>
                                <span class="text-[10px] text-gray-400">${item.year || 'N/A'}</span>
                                <span class="text-[10px] text-gray-400">${item.rating || '0'}/10</span>
                            </div>
                            <p class="text-[10px] text-gray-500 truncate mt-1">${item.genres ? item.genres.join(', ') : 'No genres'}</p>
                        </div>
                        <span class="material-symbols-outlined text-gray-600 text-sm group-hover:text-primary">chevron_right</span>
                    </a>
                    `;
                }).join('');
                
                // Update "View All" link
                const searchInput = searchType === 'desktop' 
                    ? document.getElementById('main-search')?.value 
                    : document.getElementById('mobile-search')?.value;
                viewAllBtn.href = `/search/?q=${encodeURIComponent(searchInput || '')}`;
                viewAllBtn.style.display = 'block';
            }
            
            showSearchDropdown(searchType);
        }
        
        // Show/hide search dropdown
        function showSearchDropdown(searchType = 'desktop') {
            const dropdown = document.getElementById(searchType === 'desktop' ? 'search-suggestions' : 'mobile-search-suggestions');
            if (dropdown) {
                dropdown.classList.remove('hidden');
                dropdown.classList.add('dropdown-enter-active');
            }
        }
        
        function hideSearchDropdown(searchType = 'desktop') {
            const dropdown = document.getElementById(searchType === 'desktop' ? 'search-suggestions' : 'mobile-search-suggestions');
            if (dropdown) {
                dropdown.classList.add('hidden');
                dropdown.classList.remove('dropdown-enter-active');
            }
        }
        
        // Debounced search handler
        function handleSearchInput(event, searchType = 'desktop') {
            clearTimeout(searchDebounceTimer);
            
            const query = event.target.value;
            if (query.length < 2) {
                hideSearchDropdown(searchType);
                return;
            }
            
            // Show loading
            const containerId = searchType === 'desktop' ? 'suggestions-list' : 'mobile-suggestions-list';
            const container = document.getElementById(containerId);
            if (container) {
                container.innerHTML = `
                    <div class="p-4 text-center">
                        <div class="loading-spinner mx-auto mb-2"></div>
                        <p class="text-gray-400 text-sm">Searching...</p>
                    </div>
                `;
                showSearchDropdown(searchType);
            }
            
            searchDebounceTimer = setTimeout(() => {
                const results = performSearch(query, searchType);
                displaySearchSuggestions(results, searchType);
            }, 300);
        }
        
        // Initialize search
        function initSearch() {
            // Load search data
            loadSearchData();
            
            // Desktop search
            const desktopSearch = document.getElementById('main-search');
            if (desktopSearch) {
                desktopSearch.addEventListener('input', (e) => handleSearchInput(e, 'desktop'));
                desktopSearch.addEventListener('focus', () => {
                    if (desktopSearch.value.length >= 2) {
                        const results = performSearch(desktopSearch.value, 'desktop');
                        displaySearchSuggestions(results, 'desktop');
                    }
                });
                desktopSearch.addEventListener('keypress', (e) => {
                    if (e.key === 'Enter' && desktopSearch.value.trim()) {
                        window.location.href = `/search/?q=${encodeURIComponent(desktopSearch.value.trim())}`;
                    }
                });
            }
            
            // Mobile search
            const mobileSearch = document.getElementById('mobile-search');
            if (mobileSearch) {
                mobileSearch.addEventListener('input', (e) => handleSearchInput(e, 'mobile'));
                mobileSearch.addEventListener('focus', () => {
                    if (mobileSearch.value.length >= 2) {
                        const results = performSearch(mobileSearch.value, 'mobile');
                        displaySearchSuggestions(results, 'mobile');
                    }
                });
                mobileSearch.addEventListener('keypress', (e) => {
                    if (e.key === 'Enter' && mobileSearch.value.trim()) {
                        window.location.href = `/search/?q=${encodeURIComponent(mobileSearch.value.trim())}`;
                    }
                });
            }
            
            // Close dropdowns when clicking outside
            document.addEventListener('click', (e) => {
                const desktopDropdown = document.getElementById('search-suggestions');
                const mobileDropdown = document.getElementById('mobile-search-suggestions');
                const desktopInput = document.getElementById('main-search');
                const mobileInput = document.getElementById('mobile-search');
                
                if (desktopDropdown && !desktopDropdown.contains(e.target) && desktopInput && !desktopInput.contains(e.target)) {
                    hideSearchDropdown('desktop');
                }
                if (mobileDropdown && !mobileDropdown.contains(e.target) && mobileInput && !mobileInput.contains(e.target)) {
                    hideSearchDropdown('mobile');
                }
            });
        }
        
        // Common header functions
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            const overlay = document.getElementById('mobile-menu-overlay');
            if (menu && overlay) {
                menu.classList.toggle('menu-open');
                overlay.classList.toggle('hidden');
                // Close search dropdowns when opening mobile menu
                hideSearchDropdown('desktop');
                hideSearchDropdown('mobile');
            }
        }
        
        function toggleMobileSearch() {
            const searchBar = document.getElementById('mobile-search-bar');
            if (searchBar) {
                searchBar.classList.toggle('hidden');
                if (!searchBar.classList.contains('hidden')) {
                    const mobileSearch = document.getElementById('mobile-search');
                    if (mobileSearch) {
                        mobileSearch.focus();
                    }
                }
            }
        }
        
        function toggleMobileDropdown(id) {
            const dropdown = document.getElementById(id);
            if (dropdown) {
                dropdown.classList.toggle('hidden');
                const arrowId = id === 'genre-mobile' ? 'genre-arrow' : 'country-arrow';
                const arrow = document.getElementById(arrowId);
                if (arrow) {
                    arrow.style.transform = dropdown.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
                }
            }
        }
        
        // Initialize when DOM is loaded
        document.addEventListener('DOMContentLoaded', function() {
            initSearch();
            
            // Close mobile menu when clicking a link
            const mobileLinks = document.querySelectorAll('#mobile-menu a');
            mobileLinks.forEach(link => {
                link.addEventListener('click', () => {
                    toggleMobileMenu();
                });
            });
        });
    </script>
</body>
</html>
