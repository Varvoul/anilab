permalink: /search-data.json
---
[
  {% for post in posts %}
  {
    "id": "{{ post.id or post.title | slugify }}",
    "title": "{{ post.title | replace('"', '\\"') | safe }}",
    "type": "{{ post.type or 'movie' | safe }}",
    "year": {{ post.year or 2023 }},
    "rating": {{ post.rating or 0 }},
    "duration": "{{ post.duration or 'N/A' | safe }}",
    "genres": {{ post.genres | default([]) | json | safe }},
    "poster": "{{ post.poster or 'https://via.placeholder.com/300x450?text=Poster' | safe }}",
    "slug": "{{ post.slug or post.title | slugify | safe }}",
    "description": "{{ post.description | replace('"', '\\"') | default('No description available.') | safe }}"
  }{% if not loop.last %},{% endif %}
  {% endfor %}
]